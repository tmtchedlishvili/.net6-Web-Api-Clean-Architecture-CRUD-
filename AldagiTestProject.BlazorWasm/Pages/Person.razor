@page "/persons"
@using System.Data.Entity.Core.Metadata.Edm
@using Domain.Entities.Main
@inject HttpClient Http

<PageTitle>Persons ðŸ‘¯</PageTitle>

<h1>Persons</h1>

<p>You can register a person on this page.</p>

@if (_persons == null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
            <th>Gender</th>
            <th>Id Number</th>
            <th>Citizenship</th>
            <th>Email</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var person in _persons)
        {
            <tr>
                <td>@person.Id</td>
                <td>@person.FirstName</td>
                <td>@person.LastName</td>
                <td>@person.DateOfBirth.ToShortDateString()</td>
                <td>@person.Gender</td>
                <td>@person.IdNumber</td>
                <td>@person.Citizenship</td>
                <td>@person.Email</td>
            </tr>
        }
        </tbody>
    </table>
}

