@page "/person"
@using Domain.Entities.Main
@inject HttpClient Http

<PageTitle>Person</PageTitle>

<h1>Person</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (_persons == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
            <th>Id Number</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var person in _persons)
        {
            <tr>
                <td>@person.Id</td>
                <td>@person.FirstName</td>
                <td>@person.LastName</td>
                <td>@person.DateOfBirth.ToShortDateString()</td>
                <td>@person.IdNumber</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private Person[]? _persons;

    protected override async Task OnInitializedAsync()
    {
        // _persons = await Http.GetFromJsonAsync<Person[]>("sample-data/weather.json");
        _persons = await Http.GetFromJsonAsync<Person[]>("api/Person/GetPersons");
    }

